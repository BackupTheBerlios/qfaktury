mkdir -p /usr/share/qfaktury/templates
install -c -p -m 644 ./share/qfaktury/templates/style.css /usr/share/qfaktury/templates/style.css

mkdir -p /usr/share/applications
install -c -p  -m 644 ./share/qfaktury/icons/qfaktury.desktop /usr/share/applications/qfaktury.desktop 

mkdir -p /usr/share/applications/kde
install -c -p  -m 644 ./share/qfaktury/icons/qfaktury.desktop /usr/share/applications/kde/qfaktury.desktop